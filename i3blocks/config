#instance=spotify
#label=Media
#label=üéµ
#interval=10
#signal=10

[docker]
#color=#0db7ed
color=#80B1FF
interval=30
LABEL=üê≥ 


# Disk usage
#
# The directory defaults to $HOME if the instance is not specified.
# The script may be called with a optional argument to set the alert
# (defaults to 10 for 10%).
[disk]
label=<span color="#80B1FF"><i>HOME </i></span>
markup=pango
#instance=/
interval=30
separator=false


# Memory usage
#
# The type defaults to "mem" if the instance is not specified.
[memory]
label=<span color="#80b1ff"><i>MEM</i></span>
separator=false
interval=30
markup=pango

